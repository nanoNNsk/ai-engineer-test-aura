# Database Configuration (Docker Compose default)
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/rag_system

# Redis Configuration (Docker Compose default)
REDIS_URL=redis://localhost:6379/0

# OpenAI Configuration (ใส่ API key ของคุณที่นี่ หรือใช้ "mock-key" สำหรับ Mock Mode)
OPENAI_API_KEY=mock-key

# Application Configuration
EMBEDDING_MODEL=text-embedding-ada-002
LLM_MODEL=gpt-4
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
CACHE_TTL=3600
TOP_K_RESULTS=5
